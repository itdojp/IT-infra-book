{
  "book": {
    "title": "ITインフラストラクチャ技術ガイド",
    "subtitle": "ネットワークとサーバーシステムの設計と実装",
    "description": "ベンダー非依存の観点からインフラストラクチャ技術の本質的な設計原理と実装手法を体系化した技術書",
    "author": {
      "name": "太田和彦（株式会社アイティードゥ）",
      "email": "knowledge@itdo.jp",
      "github": "itdojp",
      "organization": "株式会社アイティードゥ",
      "website": "https://www.itdo.jp"
    },
    "license": "MIT License",
    "repository": {
      "url": "https://github.com/itdojp/IT-infra-book"
    },
    "version": "1.0.0",
    "language": "ja"
  },
  "deployment": {
    "sourceFolder": "docs",
    "siteUrl": "https://itdojp.github.io/IT-infra-book/"
  },
  "contentSections": [
    {
      "name": "introduction",
      "title": "はじめに",
      "directory": "introduction",
      "enabled": true,
      "order": 1
    },
    {
      "name": "chapters",
      "title": "本章",
      "directory": "chapters",
      "enabled": true,
      "order": 2,
      "numbering": true
    },
    {
      "name": "appendices",
      "title": "付録",
      "directory": "appendices",
      "enabled": true,
      "order": 3,
      "numbering": true,
      "numberingPrefix": "付録"
    },
    {
      "name": "afterword",
      "title": "あとがき",
      "directory": "afterword",
      "enabled": true,
      "order": 4
    }
  ],
  "tableOfContents": {
    "enabled": true,
    "outputFile": "table-of-contents.md",
    "title": "目次",
    "maxDepth": 3,
    "includeNumbers": true,
    "autoLink": true,
    "autoNumberChapters": true,
    "detectExistingNumbers": true
  },
  "excludePatterns": [
    "draft.md",
    "notes.md",
    "solutions.md",
    "instructor.md",
    "private.md",
    "confidential.md",
    "secret.md",
    "*.tmp",
    "*.backup",
    "*.bak",
    ".private",
    ".confidential",
    ".DS_Store",
    "Thumbs.db"
  ],
  "contentExcludePatterns": [
    "<!-- TODO:",
    "<!-- FIXME:",
    "<!-- PRIVATE:",
    "<!-- SECRET:",
    "<!-- DRAFT:",
    "<!-- CONFIDENTIAL:",
    "<!-- INSTRUCTOR:",
    "<!-- INTERNAL:",
    "<!-- SENSITIVE:"
  ],
  "publicFiles": [
    "index.md",
    "README.md",
    "setup-guide.md"
  ],
  "build": {
    "outputDirectory": "docs",
    "enableV3DesignSystem": true,
    "enableNavigation": true,
    "enableSyntaxHighlighting": true,
    "enableSearchIndex": false,
    "enablePWA": false,
    "minifyCSS": false,
    "minifyJS": false
  },
  "imageOptimization": {
    "enabled": true,
    "quality": 85,
    "formats": ["webp", "original"],
    "maxWidth": 1920,
    "stripMetadata": true,
    "lazyLoad": true
  },
  "pdf": {
    "engine": "pandoc",
    "paperSize": "A4",
    "margin": "2cm",
    "fontSize": "11pt",
    "fontFamily": "Noto Sans CJK JP",
    "includeTableOfContents": true,
    "includeCoverPage": true,
    "language": "ja"
  },
  "epub": {
    "engine": "pandoc",
    "coverImage": null,
    "includeTableOfContents": true,
    "chapterLevel": 1,
    "language": "ja",
    "publisher": "株式会社アイティードゥ",
    "rights": "© 2025 ITDO Inc. All rights reserved."
  }
}